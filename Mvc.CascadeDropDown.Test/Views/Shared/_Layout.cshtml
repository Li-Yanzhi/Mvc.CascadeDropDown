<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/pnotify.custom.min.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="font-size:1.5em; font-weight:bolder;" href="@Url.Action("Index", "Home")">Cascading DropDown Helper V @typeof(Mvc.CascadeDropDown.DropDownListExtensions).Assembly.GetName().Version</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="@Url.Action("Index", "Home")">Basic Example <span class="sr-only">(current)</span></a></li>
                    <li><a href="@Url.Action("MultipleDependencies", "Home")">Multiple Dependencies</a></li>                   
                </ul>                               
            </div><!-- /.navbar-collapse -->
        </div>
</nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Cascading DropDown Helper</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/pnotify.custom.min.js")
   
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            PNotify.prototype.options.styling = 'bootstrap3';
            window.alert = function (message, title, type) {
                new PNotify({
                    title: title || "Alert",
                    text: message,
                    type: type || "info"
                });
            };
        })       
    </script>
</body>
</html>
